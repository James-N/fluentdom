{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "ignoredNodes": ["CallExpression", "MemberExpression"], "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-extra-boolean-cast": "off",
        "no-prototype-builtins": "off",
        "no-unused-vars": "warn",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-unreachable": "warn",
        "curly": "error",
        "no-redeclare": "error",
        "no-useless-escape": "warn"
    }
}
